{
	"tabWidth": 2,
	"useTabs": false,
	"parser": "babylon",
	"trailingComma": "none",
	"jsxBracketSameLine": true,
	"semi": true,
	"singleQuote": false,
	"arrowParens": "avoid",
	"printWidth": 80,
	"overrides": [{
			"files": ["*.json", ".eslintrc", ".tslintrc", ".prettierrc", ".tern-project"],
			"options": {
				"parser": "json",
				"tabWidth": 2
			}
		},
		{
			"files": "*.vue",
			"options": {
				"parser": "vue",
				"tabWidth": 2
			}
		},
		{
			"files": "*.{css,sass,scss,less}",
			"options": {
				"parser": "css",
				"tabWidth": 2
			}
		},
		{
			"files": "*.ts",
			"options": {
				"parser": "typescript"
			}
		}
	]
}
